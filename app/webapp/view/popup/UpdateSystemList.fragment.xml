<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="dialogUpdateSystemList"
        resizable="true"
        draggable="true"
        stretch="false"
        busy="{mainView>/busy}"
        busyIndicatorDelay="0"
        title="{i18n>tlUpdateSystemList}"
        contentWidth="50%">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm id="formUpdateSystemList"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        <!-- 회사 -->
                        <Label text="{i18n>fldCompanyCd}" />
                        <ComboBox id="UpdateSysLiCompanyCd"
                            items="{path: 'management>/SCI_VH_CODE_COMPANY_SRV'}"
                            selectedKey="{path: 'management>COMPANY_CD_ID', mode : 'OneWay'}"
                            selectionChange="onSelectionChange"
                            required="true">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                        </ComboBox>
                        <!-- 자회사 -->
                        <Label text="{i18n>fldSubsidaryCd}" />
                        <ComboBox id="UpdateSysLiSubdiaryCd"
                            items="{path: 'management>/SCI_VH_CODE_SUBSIDARY_SRV'}"
                            selectedKey="{path: 'management>SUBSIDARY_CD_ID', mode: 'OneWay'}"
                            selectionChange="onSelectionChange"
                            required="true">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                        </ComboBox>
                        <!-- 어플리케이션 구분 -->
                        <Label text="{i18n>fldApplTypeCd}" />
                        <ComboBox id="UpdateSysLiAppliCd"
                            items="{path: 'management>/SCI_VH_CODE_APPLICATIONTYPE_SRV'}"
                            selectedKey="{path: 'management>APPPLTYPE_CD_ID', mode : 'OneWay'}"
                            selectionChange="onSelectionChange"
                            required="true">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                        </ComboBox>
                        <!-- 어플리케이션 명 -->
                        <Label text="{i18n>fldApplNm}" />
                        <Input value="{management>APPL_NM}"
                            required="true" />
                        <!-- 시스템 명 -->
                        <Label text="{i18n>fldSystemNm}" />
                        <Input value="{management>SYSTEM_NM}"
                            required="true" />
                        <!-- 설명 -->
                        <Label text="{i18n>fldSystemDescription}" />
                        <Input value="{mainView>/SystemList/Update/description}"
                            required="true"/>
                        <!-- 담당자 이름 -->
                        <Label text="{i18n>fldSystemManager}" />
                        <Input value="{mainView>/SystemList/Update/managerName}"
                            required="true"/>
                        <!-- 연락처 -->
                        <Label text="{i18n>fldSystemManagerContact}" />
                        <Input value="{mainView>/SystemList/Update/contact}"
                            required="true"/>
                        <!-- 이메일 -->
                        <Label text="{i18n>fldSystemManagerEmail}" />
                        <Input value="{mainView>/SystemList/Update/email}"
                            required="true"/>
                        <!-- 시스템 IP -->
                        <Label text="{i18n>fldSystemIp}" />
                        <Input value="{mainView>/SystemList/Update/systemIP}"
                            required="true"/>
                        <!-- 시스템 HOST -->
                        <Label text="{i18n>fldSystemHost}" />
                        <Input value="{mainView>/SystemList/Update/systemHost}"
                            required="true"/>
                        <!-- 시스템 PORT -->
                        <Label text="{i18n>fldSystemPort}" />
                        <Input value="{mainView>/SystemList/Update/systemPort}"
                            required="true"/>
                        <!-- 시스템 인증방식 -->
                        <Label text="{i18n>fldSystemCerti}" />
                        <ComboBox items="{path: 'mainView>/SystemList/AccessCerti', sorter: {path: 'type'}}"
                            selectedKey="{mainView>/SystemList/Add/systemCerti}">
                            <core:Item text="{mainView>typeName}"
                                key="{mainView>type}"/>
                        </ComboBox>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button text="Save"
                press="onPAI"
                app:fcCode="fcUpdateSystemListPopup" />

            <Button text="Cancel"
                press="onPAI"
                app:fcCode="fcCancelUpdateSystemListPopUp" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>