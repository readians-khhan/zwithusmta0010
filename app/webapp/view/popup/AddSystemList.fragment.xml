<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="dialogAddSystemList"
        resizable="true"
        draggable="true"
        stretch="false"
        busy="{mainView>/busy}"
        busyIndicatorDelay="0"
        title="{i18n>tlAddSystemList}"
        contentWidth="50%">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        <!-- 회사 -->
                        <Label text="{i18n>fldCompanyCd}" />
                        <ComboBox id="AddSysLiCompanyCd"
                            items="{path: 'management>/SCI_VH_CODE_COMPANY_SRV'}"
                            selectionChange="onSelectionChange"
                            required="true">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                        </ComboBox>
                        <!-- 자회사 -->
                        <Label text="{i18n>fldSubsidaryCd}" />
                        <ComboBox id="AddSysLiSubdiaryCd"
                            items="{path: 'management>/SCI_VH_CODE_SUBSIDARY_SRV'}"
                            selectionChange="onSelectionChange"
                            required="true">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                        </ComboBox>
                        <!-- 어플리케이션 구분 -->
                        <Label text="{i18n>fldApplTypeCd}" />
                        <ComboBox id="AddSysLiAppliCd"
                            items="{path: 'management>/SCI_VH_CODE_APPLICATIONTYPE_SRV'}"
                            selectionChange="onSelectionChange"
                            required="true">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                        </ComboBox>
                        <!-- 어플리케이션 명 -->
                        <Label text="{i18n>fldApplNm}" />
                        <Input value="{mainView>/SystemList/Add/appliNm}"
                            required="true" />
                        <!-- 시스템 명 -->
                        <Label text="{i18n>fldSystemNm}" />
                        <Input value="{mainView>/SystemList/Add/systemNm}"
                            required="true" />
                        <!-- 설명 -->
                        <Label text="{i18n>fldSystemDescription}" />
                        <Input value="{mainView>/SystemList/Add/description}"
                            required="true"/>

                        <!-- 담당자 이름 -->
                        <Label text="{i18n>fldSystemManager}" />
                        <Input value="{mainView>/SystemList/Add/managerName}"
                            required="true"/>
                        <!-- 연락처 -->
                        <Label text="{i18n>fldSystemManagerContact}" />
                        <Input type="Tel"
                            value="{mainView>/SystemList/Add/contact}"
                            placeholder="Enter phone number"
                            required="true"/>
                        <!-- 이메일 -->
                        <Label text="{i18n>fldSystemManagerEmail}" />
                        <Input type="Email"
                            value="{mainView>/SystemList/Add/email}"
                            placeholder="Enter Email"
                            required="true"/>

