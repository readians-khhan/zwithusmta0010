<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="dialogAddCodeList" resizable="true" draggable="true" stretch="false" busy="{mainView>/busy}" busyIndicatorDelay="0" title="{i18n>tlAddSystemList}" contentWidth="50%">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                    <f:content>

                        <Label text="{i18n>fldCodeSection}" />
                        <ComboBox id="AddCodeLiCat01" items="{path: 'management>/SCI_VH_CODE_CAT01_SRV'}" selectionChange="onSelectionChange" required="true">
                            <core:Item text="{management>CAT01}" key="{management>CAT01}" />
                        </ComboBox>

                        <Label text="{i18n>fldCodeDetailSection}" />
                        <ComboBox id="AddCodeLiCat02" items="{path: 'management>/SCI_VH_CODE_CAT02_SRV'}" selectionChange="onSelectionChange" required="true">
                            <core:Item text="{management>CAT02}" key="{management>CAT02}" />
                        </ComboBox>

                        <Label text="{i18n>fldCodeEtcSection}" />
                        <ComboBox id="AddCodeLiCat03" items="{path: 'management>/SCI_VH_CODE_CAT03_SRV'}" selectionChange="onSelectionChange">
                            <core:Item text="{management>CAT03}" key="{management>CAT03}" />
                        </ComboBox>

                        <Label text="{i18n>fldCodeName}" />
                        <Input value="{mainView>/CodeList/Add/codeNm}" required="true">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>

                        <Label text="{i18n>fldCodeDescription}" />
                        <Input value="{mainView>/CodeList/Add/description}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>

                        <Label text="{i18n>fldCodeDetailDescription}" />
                        <Input value="{mainView>/CodeList/Add/detailDescription}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>

                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>btnMessage} : {= ${message>/}.length }"
                press="onPAI"
                type="Critical"
                visible="{mainView>/hasError}"
                app:fcCode="fcMessage" />

            <Button text="Create" 
                press="onPAI" 
                app:fcCode="fcConfirmUpdateCodePopup" />

            <Button text="Cancel" 
                press="onPAI" 
                app:fcCode="fcCancelUpdateCodePopup" />

        </buttons>
    </Dialog>
</core:FragmentDefinition>