<core:FragmentDefinition id="RegisterInterface"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    fragmentName="RegisterInterface"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="dialogRegisterInterfaceList"
        resizable="true"
        draggable="true"
        stretch="false"
        busy="{mainView>/busy}"
        busyIndicatorDelay="0"
        title="{i18n>tlRegisterInterface}"
        contentWidth="85%">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="10"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        <!--Interface Status-->
                        <Label text="{i18n>fldStatus}" />
                        <ComboBox selectedKey="{mainView>/Interface/Regist/StatusID}"
                            items="{path: 'management>/SCI_VH_CODE_IFSTATUS_SRV', sorter: {path: 'DESC01'}}">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--Interface Name -->
                        <Label text="{i18n>fldInterfaceName}" />
                        <Input value="{mainView>/Interface/Regist/Name}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface Description   -->
                        <Label text="{i18n>fldInterfaceDesc}" />
                        <Input value="{mainView>/Interface/Regist/Description}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--SCI Package -->
                        <Label text="{i18n>fldSCIPackage}" />
                        <Input value="{mainView>/Interface/Regist/Package}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--SCI Integration Flow Name-->
                        <Label text="{i18n>fldSCIif}" />
                        <Input value="{mainView>/Interface/Regist/IFName}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface As-Is ID-->
                        <Label text="{i18n>fldAsIsID}" />
                        <Input value="{mainView>/Interface/Regist/AsIsID}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface As-Is Name -->
                        <Label text="{i18n>fldAsIsName}" />
                        <Input value="{mainView>/Interface/Regist/AsIsName}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface As-Is Description-->
                        <Label text="{i18n>fldAsIsDesc}" />
                        <Input value="{mainView>/Interface/Regist/AsIsDescription}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Sorce System -->
                        <Label text="{i18n>fldSSystemName}" />
                        <Input id="ISourceSystem"
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="onPAI"
                            app:fcCode="fcVHSSystem">
                            <core:Item key="{mainView>/Interface/Regist/SourceSystemID}"
                                text="{mainView>/Interface/Regist/SourceSystemDESC}"/>
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Sorce System Type-->
                        <Label text="{i18n>fldSApplicationType}" />
                        <ComboBox selectedKey="{mainView>/Interface/Regist/SourceSystemTypeID}"
                            items="{path: 'management>/SCI_VH_CODE_IFPROTOCOL_SRV', sorter: {path: 'DESC01'}}">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--Target System -->
                        <Label text="{i18n>fldTSystemName}" />
                        <Input id="ITargetSystem"
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="onPAI"
                            app:fcCode="fcVHTSystem">
                            <core:Item key="{mainView>/Interface/Regist/TargetSystemID}"
                                text="{mainView>/Interface/Regist/TargetSystemDESC}"/>
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Sorce System Type-->
                        <Label text="{i18n>fldTApplicationType}" />
                        <ComboBox selectedKey="{mainView>/Interface/Regist/TargetSystemTypeID}"
                            items="{path: 'management>/SCI_VH_CODE_IFPROTOCOL_SRV', sorter: {path: 'DESC01'}}">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--RFC Name -->
                        <Label text="{i18n>fldRFCName}" />
                        <Input value="{mainView>/Interface/Regist/RFCName}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Enterprise Service Name -->
                        <Label text="{i18n>fldESName}" />
                        <Input value="{mainView>/Interface/Regist/ESName}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Web Service Name -->
                        <Label text="{i18n>fldWSName}" />
                        <Input value="{mainView>/Interface/Regist/WSName}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Web Binding Name -->
                        <Label text="{i18n>fldWSBName}" />
                        <Input value="{mainView>/Interface/Regist/WSBName}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Execution Type -->
                        <Label text="{i18n>fldBatch}" />
                        <ComboBox items="{path: 'management>/SCI_VH_CODE_IFEXECUTION_SRV', sorter: {path: 'DESC01'}}"
                            selectedKey="{mainView>/Interface/Regist/typeID}">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL6 L8 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--Batch List-->
                        <Label text="{i18n>fldBatchList}" />
                        <Table id="tabBatchList"
                            width="80%"
                            inset="false"
                            items="{mainView>/Interface/Regist/Batch}">
                            <headerToolbar>
                                <OverflowToolbar >
                                    <content>
                                        <Button visible="{= !${detailView>/review} }"
                                            text="{i18n>btnAdd}"
                                            press="onPAI"
                                            app:fcCode="fcAddBatchList"/>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcExecType}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcCycle}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcRecurrecny}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcOnTime}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcTimeInterval}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcOnFrDate}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcOnToDate}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcTimezone}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ComboBox selectionChange="onPAI"
                                        app:fcCode="fcChangeCbcExecType" id="CbcExecType"
                                            items="{path: 'management>/SCI_VH_CODE_BATCHEXEC_SRV'}">
                                            <core:Item additionalText="{management>DESC01}" text="{management>CODE}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <ComboBox id="CbcCycle"
                                            items="{path: 'management>/SCI_VH_CODE_BATCHCYCLE_SRV'}">
                                            <core:Item text="{management>DESC01}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <ComboBox id="CbcRecurrecn"
                                            items="{path: 'management>/SCI_VH_CODE_BATCHRECUR_SRV'}">
                                            <core:Item text="{management>DESC01}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <TimePicker id="TPOntime"
                                            valueFormat="HH:mm"
                                            displayFormat="HH:mm"
                                            change="handleChange"
                                            placeholder="Enter  the time"/>
                                        <ComboBox items="{path: 'management>/SCI_VH_CODE_BATCHTIMEINTERVAL_SRV'}">
                                            <core:Item text="{management>DESC01}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <DatePicker id="DPFrdate"
                                            valueFormat="yyyy-MM-dd"
                                            displayFormat="long"
                                            change="handleChange"
                                            class="sapUiSmallMarginBottom"/>
                                        <DatePicker id="DPTodate"
                                            valueFormat="yyyy-MM-dd"
                                            displayFormat="long"
                                            change="handleChange"
                                            class="sapUiSmallMarginBottom"/>
                                        <Input id="ITimezone"
                                            value="{mainView>/Interface/Regist/Timezone}"
                                            required="true">
                                        </Input>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>btnMessage} : {= ${message>/}.length }"
                press="onPAI"
                type="Critical"
                visible="true"
                app:fcCode="fcMessage"/>
            <Button text="Create"
                press="onPAI"
                app:fcCode="fcCreateInterfacePopup" />
            <Button text="Cancel"
                press="onPAI"
                app:fcCode="fcCancelInterfacePopup" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>