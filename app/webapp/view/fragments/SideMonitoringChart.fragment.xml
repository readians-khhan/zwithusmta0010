<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <t:Table selectionMode="Single" enableSelectAll="false" alternateRowColors="true" visibleRowCountMode="Auto" enableBusyIndicator="true" rows="{
            path: 'management>/SCI_MST_CODE_SRV',
            parameters: {
                $count: true,
                $$updateGroupId: 'codeListDataGroup'
            },
            events: {
                dataReceived : '.onDR_CodeList'
            }
        }" rowSelectionChange="onPAI" app:fcCode="fcSelectionChangeCodeList">
        <t:extension>
            <OverflowToolbar>
                <Title text="{i18n>tlTotalCount} { 
                    path: 'mainView>/CodeList/totalCount',
                    type: 'sap.ui.model.odata.type.Int32'}" wrapping="false" />
                <Title text=" / {i18n>tlSelectedCount} { path: 'mainView>/CodeList/selectedCount', type: 'sap.ui.model.odata.type.Int32' }" />
                <Button type="Transparent" icon="sap-icon://refresh" press="onPAI" app:fcCode="fcCodeRefresh" />
                <ToolbarSpacer />
                <Button text="{i18n>btnSolve}" icon="sap-icon://edit" press="onPAI" app:fcCode="fcCreateCode" />
                <Button text="{i18n>btnDownload}" icon="sap-icon://download" press="onPAI" app:fcCode="fcCreateInterface" />
                <!-- <Button text="{i18n>btnDelete}" icon="sap-icon://delete" type="Reject" enabled="{= ${mainView>/CodeList/selectedCount} > 0 ? true : false}" press="onPAI" app:fcCode="fcDeleteCodeList" /> -->
            </OverflowToolbar>
        </t:extension>
        <t:columns>
            <!-- 회사 -->
            <t:Column width="10rem" autoResizable="true" sortProperty="CAT01" filterProperty="CAT01" hAlign="Center">
                <Label text="{i18n>fldMoniterCode}" textAlign="Center" width="100%" />
                <t:template>
                    <Text text="{management>CAT01}" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 발생일자 -->
            <t:Column width="11rem" autoResizable="true" sortProperty="CAT02" filterProperty="CAT02" hAlign="Center">
                <Label text="{i18n>fldMoniterOccurDay}" textAlign="Center" width="100%" />
                <t:template>
                    <Text text="{management>CAT02}" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 프로그램명  -->
            <t:Column hAlign="Center" autoResizable="true" width="15rem">
                <Label text="{i18n>fldMoniterProgramName}" />
                <t:template>
                    <Text text="{management>CAT03}" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 구분 -->
            <t:Column sortProperty="CODE" autoResizable="true" filterProperty="CODE" hAlign="Center" width="7rem">
                <Label text="{i18n>fldMoniterGubun}" />
                <t:template>
                    <Text text="{management>CODE}" autoResizable="true" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 오류 내용 -->
            <t:Column hAlign="Center" autoResizable="true" width="21rem">
                <Label text="{i18n>fldMoniterIssueContent}" />
                <t:template>
                    <Text text="{management>DESC01}" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 처리일자 -->
            <t:Column hAlign="Center" autoResizable="true" width="10rem">
                <Label text="{i18n>fldMoniterPocessingDate}" />
                <t:template>
                    <Text text="{management>DESC02}" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 처리내용 -->
            <t:Column hAlign="Center" autoResizable="true" width="21rem">
                <Label text="{i18n>fldMoniterPocessingContent}" />
                <t:template>
                    <Text text="{management>DESC02}" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 처리자 -->
            <t:Column hAlign="Center" autoResizable="true" width="6rem">
                <Label text="{i18n>fldMoniterPocessingUser}" />
                <t:template>
                    <Text text="{management>DESC02}" textAlign="Begin" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
            <!-- 수정 -->
            <!-- <t:Column hAlign="Center" width="5rem" autoResizable="true">
                <Label text="{i18n>fldCodeEdit}" />
                <t:template>
                    <HBox justifyContent="Center">
                        <Button icon="sap-icon://edit" press="onPAI" app:fcCode="fcUpdateCodeList" app:keyData="{management>ID}" />
                    </HBox>
                </t:template>
            </t:Column> -->
            <!-- ID - hidden -->
            <t:Column visible="false">
                <t:template>
                    <Text text="{management>ID}" textAlign="Center" width="100%" wrapping="false" />
                </t:template>
            </t:Column>
        </t:columns>
        <t:footer></t:footer>
    </t:Table>
</core:FragmentDefinition>