<mvc:View controllerName="withus.sci.management.SCIManagement.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:f="sap.f"
xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<tnt:ToolPage class="sapUiDemoToolPage" id="idToolPageMain" sideExpanded="{mainView>/sideExpanded}">
		<tnt:header>
			<!--페이지 헤더 -->
			<tnt:ToolHeader>
				<!--화면 로고! -->
				<html:div class="sk_siltron_logo"/>
				<Text text="{i18n>tlMainHeadTitle}" />
				<ToolbarSpacer />
				<Button visible="true" class="sapUiTinyMarginEnd" type="Default" text="{i18n>Login}" press="onPAI" app:fcCode="fcLogout" />
			</tnt:ToolHeader>
		</tnt:header>
		<!-- Side Menu -->
		<tnt:sideContent class="side-navigation">
			<tnt:SideNavigation id="sideNavigation" selectedKey="subItem3">
				<tnt:NavigationList>
					<!-- 메뉴 버튼 열고 닫기 -->
					<tnt:NavigationListItem key="menu" text="{i18n>sideExpand}" icon="sap-icon://collapse" />
					<!-- 인터페이스 리스트 -->
					<tnt:NavigationListItem text="{i18n>SideInterfaceList}" icon="sap-icon://overview-chart"></tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<!-- 코드리스트 -->
						<tnt:NavigationListItem text="{i18n>sideCdodeList}" icon="sap-icon://bar-code" />
						<!-- 시스템 리스트 -->
						<tnt:NavigationListItem text="{i18n>sideSystemList}" icon="sap-icon://it-system" />
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer>
				<f:DynamicPage>
					<f:title>
						<f:DynamicPageTitle>
							<f:heading>
								<Title text="{i18n>mcInterfaceTitle}" />
							</f:heading>
							<f:actions>
								<Button text="{i18n>btnSearch}" width="4rem" type="Accept" />
							</f:actions>
						</f:DynamicPageTitle>						
					</f:title>
					<f:header>
						<f:DynamicPageHeader pinnable="false">
							<f:content>
								<core:Fragment fragmentName="withus.sci.management.SCIManagement.view.fragments.HeaderFile"
								  type="XML"/>
							  </f:content>
						</f:DynamicPageHeader>
					</f:header>
					<f:content>
						<core:Fragment fragmentName="withus.sci.management.SCIManagement.view.fragments.SideFiles"
						  type="XML" />
					  </f:content>				
				</f:DynamicPage>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>