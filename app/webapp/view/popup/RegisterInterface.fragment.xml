<core:FragmentDefinition id="RegisterInterface" xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    fragmentName="RegisterInterface"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="dialogRegisterInterfaceList"
        resizable="true"
        draggable="true"
        stretch="false"
        busy="{mainView>/busy}"
        busyIndicatorDelay="0"
        title="{i18n>tlRegisterInterface}"
        contentWidth="50%">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        
                        <Label text="{i18n>fldCodeSection}" />
                        <MultiComboBox items="{path: 'management>/SCI_MST_CODE_SRV'}" required="true" >
                            <core:Item text="{management>CAT01}" key="{management>CAT01}"  />
                        </MultiComboBox>

                        <Label text="{i18n>fldCodeDetailSection}" />
                        <MultiComboBox items="{path: 'management>/SCI_MST_CODE_SRV'}" required="true" >
                            <core:Item text="{management>CAT02}" key="{management>CAT02}" />
                        </MultiComboBox>

                        <Label text="{i18n>fldCodeEtcSection}" />
                        <MultiComboBox items="path: 'management>/SCI_MST_CODE_SRV'}" required="true" >
                            <core:Item text="{management>CAT03}" key="{management>CAT03}" />
                        </MultiComboBox>

                        <Label text="{i18n>fldCodeName}" />
                        <Input value="{mainView>/Emails/Register/user}" required="true">
                            <layoutData>
                                <l:GridData span="XL3 L4 M5 S5" />
                            </layoutData>
                        </ComboBox>

                        <!--Interface Name -->
                        <Label text="{i18n>fldInterfaceName}" />
                        <Input value="{mainView>/Interface/Register/Name}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL3 L4 M5 S5" />
                            </layoutData>
                        </Input>

                        <!--Interface Description   -->
                        <Label text="{i18n>fldInterfaceDesc}" />
                        <Input value="{mainView>/Interface/Register/Description}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL3 L4 M5 S5" />
                            </layoutData>
                        </Input>

                        <Label text="{i18n>fldCodeDescription}" />
                        <Input value="{mainView>/Emails/Register/address}">
                            <layoutData>
                                <l:GridData span="XL3 L4 M5 S5" />
                            </layoutData>
                        </Input>

                        <Label text="{i18n>fldCodeDetailDescription}" />
                        <Input value="{mainView>/Emails/Register/address}" >
                            <layoutData>
                                <l:GridData span="XL3 L4 M5 S5" />
                            </layoutData>
                        </Input>

                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button text="Create" press="onPAI" app:fcCode="fcCreateEmailPopup" />
            <Button text="Cancel" press="onPAI" app:fcCode="fcCancelCodePopup" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>