<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Panel class="sapUiNoContentPadding" backgroundDesign="Transparent">
        <f:Form editable="true" width="100%">
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" 
                emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="2" singleContainerFullSize="true" />
            </f:layout>
            <f:formContainers>
                <!-- Type -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldStatusType}">
                        <f:fields>
                            <MultiComboBox items="{path: 'management>/SCI_TP_INTERFACELIST_SRV'}" selectedKeys="{mainView>/Files/condition/fileStatus}">
                                <core:Item text="{management>IF_NM}" key="{management>IF_NM}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- Section -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldStatusSection}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Files/statusList', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Files/condition/movementStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- DetailSection -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldStatusDetailSection}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Files/statusList', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Files/condition/confirmationStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- Creation Date -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldStatusDate}">
                        <f:fields>
                            <DateRangeSelection dateValue="{mainView>/Files/condition/fromDate}" secondDateValue="{mainView>/Files/condition/toDate}" displayFormat="MM.dd.yyyy" required="true" />
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- Interface Name -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldFileName}">
                        <f:fields>
                            <MultiInput id="MIInterfaceName" showValueHelp="false" />
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Panel>
</core:FragmentDefinition>