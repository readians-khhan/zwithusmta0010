<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Panel class="sapUiNoContentPadding" backgroundDesign="Transparent">
        <f:Form editable="true" width="100%">
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="2" singleContainerFullSize="true" />
            </f:layout>
            <f:formContainers>
                <!-- 대분류 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldMainCategory}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Codes/statusFile', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Codes/condition/fileStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 중분류 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldMiddleCategory}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Codes/statusList', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Codes/condition/movementStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 소분류 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldSubclass}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Codes/statusList', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Codes/condition/confirmationStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- Code 명 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldCodeName}">
                        <f:fields>
                            <MultiInput id="MICodeName" showValueHelp="false" />
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>                
            </f:formContainers>
        </f:Form>
    </Panel>
</core:FragmentDefinition>