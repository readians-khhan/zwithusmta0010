<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Panel class="sapUiNoContentPadding" backgroundDesign="Transparent">
        <f:Form editable="true" width="100%">
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="2" singleContainerFullSize="true" />
            </f:layout>
            <f:formContainers>
                <!-- 회사 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldCompany}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Systems/statusFile', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Systems/condition/fileStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 자회사 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldSubsidiaryCompany}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Systems/statusList', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Systems/condition/movementStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 어플리케이션 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldApplication}">
                        <f:fields>
                            <MultiComboBox items="{path: 'mainView>/Systems/statusList', sorter: {path: 'statusKey'}}" selectedKeys="{mainView>/Systems/condition/confirmationStatus}">
                                <core:Item text="{mainView>statusName}" key="{mainView>statusKey}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 시스템 명 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldSystemName}">
                        <f:fields>
                            <MultiInput id="MIFilesFileName" showValueHelp="false" />
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>                
            </f:formContainers>
        </f:Form>
    </Panel>
</core:FragmentDefinition>