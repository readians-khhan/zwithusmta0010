<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Panel class="sapUiNoContentPadding" backgroundDesign="Transparent">
        <f:Form editable="true" width="100%">
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="12" labelSpanL="12" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" 
                emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="4" columnsL="4" columnsM="2" singleContainerFullSize="true" />
            </f:layout>
            <f:formContainers>
                <!-- 구분 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldCodeCategory}">
                        <f:fields>
                            <MultiComboBox id="MCIFSoruce" items="{path: 'management>/SCI_MST_CODE_SRV' }" >
                                <core:Item text="{management>CAT01}" key="{management>CAT01}"  />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 상세구분 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldCodeDetailCategory}">
                        <f:fields>
                            <MultiComboBox items="{path: 'management>/SCI_MST_CODE_SRV'}" >
                                <core:Item text="{management>CAT02}" />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 기타구분 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldCodeEtcCategory}">
                        <f:fields>
                            <MultiComboBox items="{path: 'management>/SCI_MST_CODE_SRV'}" >
                                <core:Item text="{management>CAT03}"  />
                            </MultiComboBox>
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>
                <!-- 명칭 -->
                <f:FormContainer>
                    <f:FormElement label="{i18n>fldCodeTitle}">
                        <f:fields>
                            <MultiInput id="MICodeName" showValueHelp="false" />
                        </f:fields>
                    </f:FormElement>
                </f:FormContainer>                
            </f:formContainers>
        </f:Form>
    </Panel>
</core:FragmentDefinition>