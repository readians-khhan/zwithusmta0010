<core:FragmentDefinition id="RegisterInterface"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    fragmentName="RegisterInterface"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog id="dialogRegisterInterfaceList"
        resizable="true"
        draggable="true"
        stretch="false"
        busy="{mainView>/busy}"
        busyIndicatorDelay="0"
        title="{i18n>tlRegisterInterface}"
        contentWidth="85%">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm editable="true"
                    id = "SFupdateInterface"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="2"
                    labelSpanL="2"
                    labelSpanM="2"
                    labelSpanS="2"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        <!--Interface Status-->
                        <Label text="{i18n>fldStatus}" />
                        <ComboBox selectedKey="{mainView>/Interface/Update/StatusID}"
                            items="{path: 'management>/SCI_VH_CODE_IFSTATUS_SRV', sorter: {path: 'DESC01'}}"
                            change="onPAI"
                            app:fcCode="fcCheckCHOnlyInputKey">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--Interface Name -->
                        <Label text="{i18n>fldInterfaceName}" />
                        <Input value="{mainView>/Interface/Update/Name}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface Description   -->
                        <Label text="{i18n>fldInterfaceDesc}" />
                        <Input value="{mainView>/Interface/Update/Description}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--SCI Package -->
                        <Label text="{i18n>fldSCIPackage}" />
                        <Input value="{mainView>/Interface/Update/Package}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--SCI Integration Flow Name-->
                        <Label text="{i18n>fldSCIif}" />
                        <Input value="{mainView>/Interface/Update/IFName}"
                            required="true">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface As-Is ID-->
                        <Label text="{i18n>fldAsIsID}" />
                        <Input value="{mainView>/Interface/Update/AsIsID}">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface As-Is Name -->
                        <Label text="{i18n>fldAsIsName}" />
                        <Input value="{mainView>/Interface/Update/AsIsName}">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Interface As-Is Description-->
                        <Label text="{i18n>fldAsIsDesc}" />
                        <Input value="{mainView>/Interface/Update/AsIsDescription}">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Sorce System -->
                        <Label text="{i18n>fldSSystemName}" />
                        <Input id="ISourceSystem"
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="onValueHelp"
                            app:vhCode="fcVHSSystem">
                            <core:Item key="{mainView>/Interface/Update/SourceSystemID}"
                                text="{mainView>/Interface/Update/SourceSystemDESC}"/>
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Sorce System Type-->
                        <Label text="{i18n>fldSApplicationType}" />
                        <ComboBox id="CSSType"
                            selectionChange="onPAI"
                            app:fcCode="fcChangeSystem"
                            selectedKey="{mainView>/Interface/Update/SourceSystemTypeID}"
                            items="{path: 'management>/SCI_VH_CODE_IFPROTOCOL_SRV', sorter: {path: 'DESC01'}}"
                            change="fcCheckCHOnlyInputKey">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--Target System -->
                        <Label text="{i18n>fldTSystemName}" />
                        <Input id="ITargetSystem"
                            showValueHelp="true"
                            valueHelpOnly="true"
                            valueHelpRequest="onValueHelp"
                            app:vhCode="fcVHTSystem">
                            <core:Item key="{mainView>/Interface/Update/TargetSystemID}"
                                text="{mainView>/Interface/Update/TargetSystemDESC}"/>
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Target System Type-->
                        <Label text="{i18n>fldTApplicationType}" />
                        <ComboBox id="CTSType"
                            selectionChange="onPAI"
                            app:fcCode="fcChangeSystem"
                            selectedKey="{mainView>/Interface/Update/TargetSystemTypeID}"
                            items="{path: 'management>/SCI_VH_CODE_IFPROTOCOL_SRV', sorter: {path: 'DESC01'}}"
                            change="fcCheckCHOnlyInputKey">
                            <core:Item text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--RFC Name -->
                        <Label text="{i18n>fldRFCName}" />
                        <Input id="IRFC"
                            value="{mainView>/Interface/Update/RFCName}"
                            enabled="false">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Enterprise Service Name -->
                        <Label text="{i18n>fldESName}" />
                        <Input id="IES"
                            value="{mainView>/Interface/Update/ESName}"
                            enabled="false">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Web Service Name -->
                        <Label text="{i18n>fldWSName}" />
                        <Input id="IWS"
                            value="{mainView>/Interface/Update/WSName}"
                            enabled="false">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Web Binding Name -->
                        <Label text="{i18n>fldWSBName}" />
                        <Input id="IWSB"
                            value="{mainView>/Interface/Update/WSBName}"
                            enabled="false">
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </Input>

                        <!--Execution Type -->
                        <Label text="{i18n>fldBatch}" />
                        <ComboBox showSecondaryValues="true"
                            items="{path: 'management>/SCI_VH_CODE_IFEXECUTION_SRV', sorter: {path: 'DESC01'}}"
                            selectedKey="{mainView>/Interface/Update/typeID}"
                            selectionChange="onPAI"
                            app:fcCode="fcChangeBatch"
                            change="fcCheckCHOnlyInputKey">
                            <core:ListItem additionalText="{management>CODE}"
                                text="{management>DESC01}"
                                key="{management>ID}"/>
                            <layoutData>
                                <l:GridData span="XL10 L10 M10 S10" />
                            </layoutData>
                        </ComboBox>

                        <!--Batch List-->
                        <Label text="{i18n>fldBatchList}" />
                        <Table id="tabBatchList"
                            width="100%"
                            inset="false"
                            items="{mainView>/Interface/Update/Batch}">
                            <headerToolbar>
                                <OverflowToolbar >
                                    <content>
                                        <Button visible="{= !${detailView>/review} }"
                                            icon="sap-icon://add-equipment"
                                            text="{i18n>btnAdd}"
                                            press="onPAI"
                                            app:fcCode="fcAddBatchList"/>
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column width="1rem">
                                    <Text text="{i18n>fldBatchDelete}"/>
                                </Column>
                                <Column width="3rem">
                                    <Text text="{i18n>fldbcExecType}"/>
                                </Column>
                                <Column width="3rem">
                                    <Text text="{i18n>fldbcRecurrecny}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcOnDate}"/>
                                </Column>
                                <Column width="4rem">
                                    <Text text="{i18n>fldbcCycle}"/>
                                </Column>
                                <Column width="2rem">
                                    <Text text="{i18n>fldbcTimeInterval}"/>
                                </Column>
                                <Column width="3rem">
                                    <Text text="{i18n>fldbcOnFrTime}"/>
                                </Column>
                                <Column width="3rem">
                                    <Text text="{i18n>fldbcOnToTime}"/>
                                </Column>
                                <Column width="3rem">
                                    <Text text="{i18n>fldbcTimezone}"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Button text="{i18N>fldBatchDelete}"
                                            icon="sap-icon://delete"
                                            press="onPAI"
                                            app:fcCode="fcCreateInterfacePopupElementDelete" />
                                        <ComboBox showSecondaryValues="true"
                                            selectionChange="onPAI"
                                            app:fcCode="fcChangeCbcExecType"
                                            id="CbcExecType"
                                            items="{path: 'management>/SCI_VH_CODE_BATCHEXEC_SRV'}"
                                            selectedKey="{mainView>EXECUTION_CD_ID}"
                                            change="fcCheckCHOnlyInputKey">
                                            <core:ListItem additionalText="{management>CODE}"
                                                text="{management>DESC01}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <ComboBox id="CbcRecurrecn"
                                            selectedKey="{mainView>RECUR_CD_ID}"
                                            items="{path: 'management>/SCI_VH_CODE_BATCHRECUR_SRV'}"
                                            enabled="false"
                                            change="fcCheckCHOnlyInputKey">
                                            <core:Item text="{management>DESC01}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <DatePicker id="DPOnDate"
                                            value="{mainView>ONDATE_D}"
                                            valueFormat="yyyy-MM-dd"
                                            displayFormat="yyyy-MM-dd"
                                            change="handleChange"
                                            class="sapUiSmallMarginBottom"
                                            enabled="false"/>
                                        <ComboBox id="CbcCycle"
                                            selectedKey="{mainView>CYCLE_CD_ID}"
                                            showSecondaryValues="true"
                                            selectionChange="onPAI"
                                            app:fcCode="fcChangeCbcCycle"
                                            change="fcCheckCHOnlyInputKey"
                                            items="{path: 'management>/SCI_VH_CODE_BATCHCYCLE_SRV'}">
                                            <core:ListItem additionalText="{management>CODE}"
                                                text="{management>DESC01}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <ComboBox id= "CbcInterval"
                                            change="fcCheckCHOnlyInputKey"
                                            selectedKey="{mainView>TIMEINTERVAL_CD_ID}"
                                            items="{path: 'management>/SCI_VH_CODE_BATCHTIMEINTERVAL_SRV'}"
                                            enabled="false">
                                            <core:Item text="{management>DESC01}"
                                                key="{management>ID}"/>
                                        </ComboBox>
                                        <TimePicker id="TPFrTime"
                                            value="{mainView>ONFRTIME_T}"
                                            valueFormat="HH:mm"
                                            displayFormat="HH:mm"
                                            change="handleChange"
                                            placeholder="Enter the time to start"/>
                                        <TimePicker id="TPToTime"
                                            value="{mainView>ONTOTIME_T}"
                                            valueFormat="HH:mm"
                                            displayFormat="HH:mm"
                                            change="handleChange"
                                            placeholder="Enter the time to finish"
                                            enabled="false"/>
                                        <Input id="ITimezone"
                                            value="{mainView>TIMEZONE}"
                                            required="true"
                                            placeholder="'한국/서울 +9:00'">
                                        </Input>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>btnMessage} : {= ${message>/}.length }"
                press="onPAI"
                type="Critical"
                visible="true"
                app:fcCode="fcMessage"/>
            <Button text="Create"
                press="onPAI"
                app:fcCode="fcCreateInterfacePopup" />
            <Button text="Cancel"
                press="onPAI"
                app:fcCode="fcCancelUpdateInterfacePopup" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>